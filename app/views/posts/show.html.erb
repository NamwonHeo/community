
<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<p>
  <strong>User:</strong>
  <%= @post.user.present? ? @post.user.email : "n/a" %>
</p>

<% if can? :update, @post %>
	<%= link_to '수정', edit_post_path(@post) %>
<% end %>

<% if can? :destroy, @post %>
	<%= link_to '삭제', @post, method: :delete, data: { confirm: '정말로 삭제하시겠습니까?' } %>
<% end %>

<%= link_to "뒤로 가기", posts_path %>
