<button type="button" class="btn btn-outline-primary"><%= link_to 'New Post', new_post_path %></button>
<h1>Posts</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Comment</th>
      <th>User</th>
      <th>Created at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td ><%= post.content %></td>
        <td><%= pluralize(post.comments.count, "Comment") %> </td>
        <td><%= post.user.present? ? post.user.username : "n/a" %></td>
        <td><%= time_ago_in_words(post.created_at) %> ago</td>
        <td><%= link_to 'Show', post %>
        <% if can? :update, post %>
          <%= link_to 'Edit', edit_post_path(post) %>
        <% end %>
        <% if can? :destroy, post %>
          <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
